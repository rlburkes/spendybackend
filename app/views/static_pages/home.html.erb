<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/expense_form' %>
      </section>
      <section>
        <%= render 'expenses/tag_cloud' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Expense Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h2>Welcome</h2>
	<p>Get started tracking your personal expenses with Spendy!</p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %> 
